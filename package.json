{
  "name": "airplane-radar-widget",
  "version": "1.3.0",
  "description": "Radar de avi√µes em tempo real com Electron e OpenSky.",
  "main": "src/js/Main.js",
  "author": "BadPineapple",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.renato.airplaneradar",
    "productName": "Airplane Radar Widget",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "config/**/*",
      "!**/node_modules/**/*",
      "!dist/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/sound/",
        "to": "sound",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asar": false,
    "win": {
      "target": "nsis",
      "icon": "assets/img/icon.ico"
    },
    "nsis": {
      "include": "build/installer.nsh",
      "createDesktopShortcut": true,
      "shortcutName": "Airplane Radar Widget"
    }
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "auto-launch": "^5.0.5",
    "dotenv": "^16.5.0",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "electron": "^28.2.3",
    "electron-builder": "^24.13.2"
  }
}
